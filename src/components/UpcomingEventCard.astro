---
//@ts-nocheck
import Button from "./Button.astro";
const { event, buttonLabel, buttonHref } = Astro.props;

// Brug fallback-dato
const fallbackDate = new Date(event.event_date);
const dayFormatted = String(fallbackDate.getDate()).padStart(2);
const monthFormatted = fallbackDate.toLocaleDateString("da-DK", {
  month: "long",
});
---

<div class="event-wrapper">
  <p class="event-type-tag">{event.event_type}</p>
  <article class="upcoming-event-card">
    <img src="/public/img/placeholder-image.webp" alt="" />
    <div class="wo-img">
      <div class="flex-title-date">
        <h3 class="event-title">{event.event_title}</h3>
        {
          event.multi_dates && event.multi_dates.length > 0 ? (
            <div class="multi-date-block">
              {event.multi_dates.map((d) => {
                const date = new Date(d);
                const day = String(date.getDate()).padStart(2);
                const month = date.toLocaleString("da-DK", { month: "long" });

                return (
                  <div class="single-date">
                    <h3 class="dates">
                      {day}. {month}
                    </h3>
                  </div>
                );
              })}
            </div>
          ) : (
            <div class="event-date-container">
              <h3 class="date">
                {dayFormatted}. {monthFormatted}
              </h3>
            </div>
          )
        }
      </div>
      <div class="flex-text-btn">
        <div class="col">
          <p class="event-type">{event.event_type}</p>
          <p class="organizer italic">{event.event_organizer}</p>
          <p set:html={event.event_description.replace(/\n/g, "<br>")} />
        </div>
        <div class="btn-wrapper">
          <Button
            href={buttonHref}
            label={buttonLabel}
            class="btn btn-primary"
          />
        </div>
      </div>
    </div>
  </article>
</div>

<style>
  .upcoming-event-card {
    background-color: var(--box-grey);
    /* padding: 15px 15px; */
    border-radius: 20px;
    display: flex;
    flex-direction: column;
    gap: 15px;
    background:
      linear-gradient(var(--box-grey), var(--box-grey)) padding-box,
      var(--logo-grad) border-box; /* 2 lag, padding-box indeni, border-box inkl border */
    border: 1px solid transparent;
    margin: 0 15px;
  }
  .wo-img {
    padding: 0 15px 15px;
  }
  img {
    border-radius: 20px 20px 0 0;
  }
  .event-wrapper {
    position: relative;
  }
  .event-type-tag {
    position: absolute;
    top: -43px;
    left: 9%;
    background: var(--logo-grad);
    color: var(--white);
    padding: 15px 35px 7px;
    border-radius: 20px 20px 0 0;
    text-transform: uppercase;
    z-index: 10;
  }
  .flex-title-date {
    padding-bottom: 10px;
    background:
      linear-gradient(var(--box-grey), var(--box-grey)) padding-box,
      var(--logo-grad) border-box; /* 2 lag, padding-box indeni, border-box inkl border */
    border-bottom: 1px solid transparent;
    margin-bottom: 15px;
  }
  .event-title {
    margin-bottom: 15px;
  }
  h3 {
    text-transform: uppercase;
  }
  .organizer {
    padding-bottom: 15px;
  }
  .event-type {
    text-transform: uppercase;
  }
  .flex-text-btn .col {
    margin-bottom: 40px;
  }
  @media screen and (min-width: 850px) {
    .upcoming-event-card {
      max-width: 1200px;
      place-self: center;
      margin-top: 50px;
    }
    .wo-img {
      padding: 0 70px;
    }
    img {
      height: 400px;
      object-fit: cover;
    }
    .flex-title-date {
      display: flex;
      gap: 20px;
      justify-content: space-between;
      align-items: flex-start;
      flex-wrap: nowrap;
    }
    .event-date-container {
      text-align: right;
      white-space: nowrap;
    }
    .flex-text-btn {
      display: flex;
      justify-content: space-between;
      gap: 100px;
    }
    .btn-wrapper {
      display: flex;
      align-items: center;
      justify-content: center;
      min-width: 250px; /* eller hvad du har brug for */
    }
    .btn-primary {
      width: fit-content;
      padding: 10px 30px;
    }
    .event-type-tag {
      left: 15%;
      top: -44px;
    }
  }
  @media screen and (min-width: 1100px) {
    .flex-text-btn {
      gap: 200px;
    }
  }
</style>
