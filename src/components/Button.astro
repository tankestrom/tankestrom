---
const { href, label } = Astro.props;
---

<a href={href} class="button">{label}</a>

<style>
  .button {
    margin-top: 15px;
    padding: 16px 0;
    border-radius: 15px;
    text-decoration: none;
    display: block; /* <-- vigtig */
    width: 100%; /* <-- fylder hele kolonnen */
    text-align: center; /* centrer tekst inde i knappen */
    box-sizing: border-box; /* sÃ¥ padding regnes korrekt med */
    background:
      linear-gradient(var(--btn-white), var(--btn-white)) padding-box,
      var(--logo-grad) border-box;
    border: 1px solid transparent;
    font-family: "helvetica_neue_lt_std75_bold";
    color: var(--white);
  }

  .button:hover {
    background-color: rgba(255, 255, 255, 0.07); /* let lysning */
    background-image: var(--logo-grad);
    background-origin: border-box;
    background-clip: padding-box, border-box;
    border: 1px solid transparent;
    transform: scale(1.03);
    transition: transform 0.2s ease-in-out;
  }
</style>
