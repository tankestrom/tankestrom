<style>
  .hero {
    position: relative;
    height: 100vh;
    background-image: url("/img/about-hero.webp");
    background-size: cover;
    background-position: center;
  }
  /* mørkere baggrundslag med 50% opacity */
  section::before {
    content: "";
    position: absolute;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.5); /* sort med 50% opacity */
    z-index: 0;
  }
  .overlay {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    height: 100%;
    padding: 0px 15px;
    gap: 20px;
  }
  .title-wrapper {
    padding-top: 200px;
  }
  .en_tanke {
    font-size: clamp(1.8rem, 13vw, 3.25rem); /* skalerer responsivt */
    text-align: center;
  }
  .starter_strommen {
    font-size: clamp(1rem, 5vw, 2rem); /* Mindre end h1 */
    text-align: center;
  }
  p {
    padding-bottom: 30px;
    text-align: center;
  }

  .grid_1-1 {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
    max-width: 1200px;
    margin: 0 auto;
  }

  @media screen and (min-width: 850px) {
    .overlay {
      padding: 0px 30px;
    }

    .title-wrapper {
      display: block; /* <--- vigtig ændring */
      padding-top: 200px;
    }
    .en_tanke {
      text-align: left;
    }

    .en_tanke {
      font-size: clamp(6rem, 11vw, 9.25rem); /* skalerer responsivt */
      text-align: left; /* Justerer teksten til venstre */
      margin-left: 100px; /* Justerer teksten til højre */
    }
    .starter_strommen {
      text-align: right;
      font-size: clamp(2rem, 5vw, 3.25rem); /* Mindre end h1 */
      margin-right: 100px; /* Justerer teksten til højre */
    }

    /* Removed invalid font-size line */

    .grid_1-1 {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 300px;
      max-width: 1200px;
      margin: 0 auto;
    }

    p {
      max-width: 700px;
      margin: 0 auto;
    }
  }
</style>
