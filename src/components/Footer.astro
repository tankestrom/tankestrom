<style>
  .footer {
    color: var(--white);
    padding-top: 3rem;
    background:
      linear-gradient(var(--box-grey), var(--box-grey)) padding-box,
      var(--logo-grad) border-box;
    border-top: 1px solid transparent;
  }

  .newsletter {
    text-align: center;
    margin-bottom: 2rem;
  }

  .newsletter h5 {
    margin-bottom: 1rem;
  }

  .newsletter form {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
  }

  .newsletter input {
    padding: 0.7rem;
    background:
      linear-gradient(var(--box-grey), var(--box-grey)) padding-box,
      var(--logo-grad) border-box;
    border: 1px solid transparent;
    border-radius: 25px;
    width: 250px;
    max-width: 100%;
    background-color: var(--box-grey);
    color: var(--white);
  }

  .newsletter button {
    padding: 0.7rem 1.5rem;
    background:
      linear-gradient(var(--box-grey), var(--box-grey)) padding-box,
      var(--logo-grad) border-box;
    border: 1px solid transparent;
    border-radius: 25px;
    background-color: var(--box-grey);
    color: var(--white);
    cursor: pointer;
  }

  .newsletter button:hover {
    background-color: rgba(255, 255, 255, 0.07);
    background-image: var(--logo-grad);
    border: 1px solid transparent;
    background-origin: border-box;
    background-clip: padding-box, border-box;
    transform: scale(1.15);
    transition: transform 0.2s;
  }

  .footer_grid {
    display: grid;
    grid-template-columns: 1fr;
    justify-content: space-around;
    flex-wrap: wrap;
    gap: 2rem;
    text-align: center;
    list-style: none;
    margin-bottom: 50px;
  }

  .footer_grid h5 {
    margin: 10px 0;
  }
  .footer-grid ul,
  li {
    line-height: 1.6;
    list-style: none;
  }
  .contact a {
    display: inline-block;
    margin-bottom: 0.25rem; /* afstand mellem kontaktlinks */
  }

  a {
    /*--INDSÆT I STYLE - SEJ HOVER*/
    color: var(--text-grey);
    display: inline-block;
    position: relative;
    text-decoration: none;
  }

  a::after {
    content: "";
    position: absolute;
    height: 1px;
    left: 0;
    bottom: -1px;
    width: 0%;
    background-color: rgba(255, 255, 255, 0.07);
    background-image: var(--logo-grad);
    transition: width 0.3s;
  }

  a:hover::after {
    width: 100%;
  }

  h1 {
    width: 100vw; /*vw = viewport width*/
    font-size: 13.5vw;
    text-align: center;
    opacity: 0.2;
    margin-top: 2rem;
    text-transform: uppercase;
    font-weight: 900;
    background: linear-gradient(to right, #ff7b00, #4f46e5);
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent; /*DET DER GØR DEN ER GRADIENT*/
    white-space: nowrap; /* forhindrer linjeskift */
    overflow: hidden;
    line-height: 0.77;
  }

  @media screen and (min-width: 850px) {
    .footer_grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
