---
import Layout from "../layouts/Layout.astro";
import "../style/general.css";
import Button from "../components/Button.astro";
---

<Layout>
  <h1 class="h1-1">SIDEN ER UNDER</h1>
  <h1 class="h1-2">KONSTRUKTION</h1>
  <div class="box">
    <p>
      Vi arbejder på at gøre denne side klar til lancering. Tjek tilbage snart
      for opdateringer!
    </p>
    <Button label="Se alle events i ventetiden" href="/eventlist" />
  </div>
</Layout>
<style>
  .h1-1 {
    margin: 75px 15px 10px;
    font-size: clamp(1rem, 9vw, 9.25rem); /* skalerer responsivt */
  }
  .h1-2 {
    margin: 0 15px 30px;
    font-size: clamp(1rem, 9vw, 9.25rem); /* skalerer responsivt */
    text-align: end;
  }
  .box {
    margin: 0 15px 75px;
    background-color: var(--box-grey);
    padding: 15px 15px 30px;
    border-radius: 20px;
    display: flex;
    flex-direction: column;
    gap: 15px;
    background:
      linear-gradient(var(--box-grey), var(--box-grey)) padding-box,
      var(--logo-grad) border-box; /* 2 lag, padding-box indeni, border-box inkl border */
    border: 1px solid transparent;
  }
  @media screen and (min-width: 850px) {
    .box {
      margin: 80px auto 80px;
      max-width: 600px;
    }
  }
</style>
